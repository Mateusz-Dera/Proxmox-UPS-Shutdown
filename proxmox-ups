your_ups=ups@localhost
battery_percentage=85
refresh=10

while true
do
  battery_level=$(upsc $your_ups battery.charge)
  if [ "$battery_level" -lt $battery_percentage ]
    then
      echo "Checking..."
      sleep $refresh
      battery_level_2=$(upsc $your_ups battery.charge)
      if [ "$battery_percentage_2" -lt $battery_percentage ]
        proxmox-shutdown
        break
      fi
    else
      echo $battery_level
      echo "Reloading..."
      sleep $refresh
    fi
done

shutdown -t -s 0